<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@drawable/bg_main"
    tools:context=".ProfilFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:src="@drawable/fikri"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="5dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_m_fikri_el_g"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_31_desember_2005"
        android:layout_marginTop="5dp"
        />


    <Button
        android:id="@+id/btnDialPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_dial_my_phone"
        android:textAllCaps="false"
        android:drawableStart="@drawable/phonecall"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="@drawable/button_bulet"
        android:textColor="@color/colorWhite"

        />

    <Button
        android:id="@+id/btnShareProfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_share_my_profil"
        android:textAllCaps="false"
        android:drawableStart="@drawable/share"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="@drawable/button_bulet2"
        android:textColor="@color/colorWhite"/>






</LinearLayout>